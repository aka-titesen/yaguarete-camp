# Configuración Docker para CodeIgniter 4
# Variables de entorno - COPIAR A .env Y CONFIGURAR VALORES REALES
CI_ENVIRONMENT=development

# Base de datos
database.default.hostname = db
database.default.database = bd_yagaruete_camp
database.default.username = root
database.default.password = CHANGE_ME_STRONG_PASSWORD
database.default.DBDriver = MySQLi
database.default.port = 3306

# Variables Docker adicionales
DB_HOST=db
DB_PORT=3306
DB_DATABASE=bd_yagaruete_camp
DB_USERNAME=app_user
DB_PASSWORD=CHANGE_ME_APP_PASSWORD
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

# Cache
CACHE_HANDLER=redis
REDIS_HOST=redis
REDIS_PORT=6379

# Email (usando Mailhog para desarrollo)
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_EMAIL=admin@yagaruetecamp.com
MAIL_FROM_NAME="Yagaruete Camp"

# Seguridad - CAMBIAR ESTOS VALORES
APP_SESSION_DRIVER=redis
APP_SESSION_COOKIE_NAME=ci_session
APP_SESSION_SAVE_PATH=
APP_SECRET_KEY=CHANGE_ME_32_CHAR_SECRET_KEY
JWT_SECRET=CHANGE_ME_JWT_SECRET_KEY

# Desarrollo
DEBUG_MODE=true
LOG_LEVEL=debug

# INSTRUCCIONES:
# 1. Copiar este archivo a .env
# 2. Cambiar TODOS los valores CHANGE_ME_*
# 3. Usar passwords fuertes (mínimo 16 caracteres)
# 4. NUNCA commitear el archivo .env real

# URLs
APP_BASE_URL=http://localhost:8080
APP_INDEX_PAGE=

# Debug
CODEIGNITER_DEBUG=1
XDEBUG_MODE=debug

# Docker - Variables de contenedores
MYSQL_ROOT_PASSWORD=YOUR_MYSQL_ROOT_PASSWORD_HERE
MYSQL_DATABASE=bd_yagaruete_camp
MYSQL_USER=yagaruete_user
MYSQL_PASSWORD=YOUR_MYSQL_USER_PASSWORD_HERE

# Redis
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE

# Nginx
NGINX_PORT=8080

# PhpMyAdmin
PMA_PORT=8081
PMA_USER=root
PMA_PASSWORD=YOUR_PMA_PASSWORD_HERE

# CodeIgniter 4 .gitignore

#--------------------------------------------------------------------
# Environment files
#--------------------------------------------------------------------
.env
.env.local
.env.development
.env.testing
.env.production
.env.staging
!.env.example
!.env.production.example

#--------------------------------------------------------------------
# Cache files
#--------------------------------------------------------------------
writable/cache/*
!writable/cache/index.html

#--------------------------------------------------------------------
# Logs
#--------------------------------------------------------------------
writable/logs/*
!writable/logs/index.html

#--------------------------------------------------------------------
# Session files
#--------------------------------------------------------------------
writable/session/*
!writable/session/index.html

#--------------------------------------------------------------------
# Uploaded files
#--------------------------------------------------------------------
writable/uploads/*
!writable/uploads/index.html
public/uploads/*
!public/uploads/index.html

#--------------------------------------------------------------------
# Composer
#--------------------------------------------------------------------
vendor/

#--------------------------------------------------------------------
# IDE Files
#--------------------------------------------------------------------
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

#--------------------------------------------------------------------
# OS Files
#--------------------------------------------------------------------
.DS_Store
Thumbs.db

#--------------------------------------------------------------------
# Node.js
#--------------------------------------------------------------------
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

#--------------------------------------------------------------------
# Build files
#--------------------------------------------------------------------
/build/
/dist/
